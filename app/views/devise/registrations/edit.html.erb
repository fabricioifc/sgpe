<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { multipart: true, :method => :put, :class => "form-horizontal" }) do |f| %>
    <%= devise_error_messages! %>

    <div class="col-md-8 col-sm-8">
      <div class="panel panel-primary">
        <div class="panel-heading">
            <div class="panel-title"><%= t ".title", resource: (t "activerecord.models.#{resource_name.to_s}") %></div>
        </div>
        <div class="panel-body">

          <div class="form-group">
            <%= f.label :name, :class => 'col-md-2 control-label' %>
            <div class="col-md-10">
              <%= f.text_field :name, :class => 'form-control', autofocus:true, placeholder:true %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :username, :class => 'col-md-2 control-label' %>
            <div class="col-md-10">
              <%= f.text_field :username, :class => 'form-control', autofocus:true, placeholder:true %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :email, :class => 'col-md-2 control-label' %>
            <div class="col-md-10">
              <%= f.email_field :email, :class => 'form-control', placeholder:true %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :bio, :class => 'col-md-2 control-label' %>
            <div class="col-md-10">
              <%= f.text_area :bio, :class => 'form-control tinymce', placeholder:true, rows: 5 %>
              <%= tinymce %>
            </div>
          </div>

          <div class="password_toggle">
            <div class="form-group">
              <%= f.label :password, :class => 'col-md-2 control-label' %>
              <div class="col-md-10">
                <%= f.password_field :password, :class => 'form-control', placeholder:true %>
              </div>
            </div>

            <div class="form-group">
              <%= f.label :password_confirmation, :class => 'col-md-2 control-label' %>
              <div class="col-md-10">
                <%= f.password_field :password_confirmation, :class => 'form-control', placeholder:true %>
              </div>
            </div>
          </div>

          <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
              <a class="btn btn-warning btn-xs btn-change-password" data-toggle="button" href="#" role="button">
                <i class="fa fa-chain"></i> Alterar senha
              </a>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :current_password, :class => 'col-md-2 control-label' %>
            <div class="col-md-10">
              <%= f.password_field :current_password, :class => 'form-control', placeholder:true %>
            </div>
          </div>

          <!-- <div><= f.label :admin %><br />
            <= f.check_box :admin %></div>

          <div><= f.label :perfil_id %><br />
            <= f.collection_select :perfil_id, Perfil.where(idativo:true), :id, :nmperfil, { :prompt =>true }, { :class => 'form-control' } %>
          </div> -->

          <!-- <= f.hidden_field :perfil_id %> -->

          <div class="form-group">
              <div class="col-md-offset-2 col-md-10">
                <%= f.submit :class => 'btn btn-primary' do |b| %>
                  <i class="icon-hand-right"></i> <%= t(".update") %>
                  <!-- <button id="btn-signup" type="button" class="btn btn-info"><i class="icon-hand-right"></i> &nbsp Sign Up</button> -->
                <% end %>
              </div>
          </div>



        <hr>

        <div class="col-md-12">
            <!-- <h3><= t(".cancel.title") %></h3> -->
            <%= t(".cancel.message") %>
            <em><%= link_to t(".cancel.action"), registration_path(resource_name), :data => { :confirm => t(".cancel.confirm") }, :method => :delete %>.</em>
            <span class="pull-right"><%= link_to t(".back"), :back %></span>
        </div>
      </div>
    </div>
  </div>

  <div class="col-md-4 col-sm-4">
    <%= render partial: 'devise/shared/avatar_panel', locals: {f: f} %>
  </div>

<% end %>
