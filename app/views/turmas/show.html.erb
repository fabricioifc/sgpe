<div class="page-header">
  <%= link_to turmas_path, class: 'btn btn-default' do %>
    <i class='fa fa-list fa-2'></i>
    <%= t('helpers.links.back') %>
  <% end %>
  <%= link_to edit_turma_path(@turma), class: 'btn btn-primary' do %>
    <i class='fa fa-pencil-square-o fa-2'></i>
    <%= t('helpers.links.edit') %>
  <% end %>
  <h1>Show turma</h1>
</div>

<dl class="dl-horizontal">
  <dt>Name:</dt>
  <dd><%= @turma.name %></dd>

  <dt>Active:</dt>
  <dd><%= @turma.active %></dd>

</dl>
