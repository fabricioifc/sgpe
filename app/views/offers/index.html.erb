<%- model = Offer %>

<div class="panel panel-default">
  <div class="panel-heading clearfix">
    <h3 class="panel-title pull-left">
      <%= link_to new_offer_path do %>
        <i class="fa fa-plus" aria-hidden="true"></i>
        <%= t '.title', :default => model.model_name.human.pluralize.titleize %>
      <% end %>
    </h3>
    <div class="pull-right">

    </div>
  </div>
  <div class="panel-body">
    <div class="table-responsive">
      <%= content_tag :table, id: "offers_datatable", class: 'table table-striped table-bordered', role: :datatable, data: { url: offers_path(format: :json)} do %>
        <thead>
          <tr>
            <th><%= model.human_attribute_name(:year) %></th>
            <th><%= model.human_attribute_name(:semestre) %></th>
            <th><%= model.human_attribute_name(:type) %></th>
            <th><%= model.human_attribute_name(:course) %></th>
            <th><%= model.human_attribute_name(:turma) %></th>
            <th><%= "Disciplinas" %></th>
            <th></th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody></tbody>
      <% end %>
    </div>
  </div>
  <div class="panel-footer clearfix">
    <div class="">
      <%= link_to new_offer_path do %>
        <i class="fa fa-plus" aria-hidden="true"></i>
        <%= t('.new', :default => t("helpers.titles.new", model: model.model_name.human.downcase )) %>
      <% end %>
    </div>
    <div class="pull-right">

    </div>
  </div>
</div>
