<div class="row">
  <% if @grid_disciplines %>
    <% grupos = @grid_disciplines.in_groups_of(5, false) %>

    <% grupos.each do |grupo| %>
      <div class="col-md-3">
        <ul class="list-group">
          <li class="list-group-item list-group-item-success">Disciplinas da grade</li>
          <% grupo.each do |g| %>
            <li class="list-group-item">
              <%= "#{g.year}.#{g.semestre} #{g.discipline.title}" %>
            </li>
          <% end %>
        </ul>
      </div>
    <% end %>

  <% else %>
    <div class="col-md-12">
      <div class="alert alert-warning" role="alert">
        Nenhuma disciplina encontrada
      </div>
    </div>
  <% end %>

</div>
