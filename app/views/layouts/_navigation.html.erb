<%# navigation styled for Bootstrap 3.0 %>
<nav class="navbar navbar-inverse navbar-fixed-top">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <!-- <= link_to t('helpers.links.home'), root_path, class: 'navbar-brand' %> -->
      <%= link_to root_path, class: 'navbar-brand' do %>
        <%= image_tag 'logo-fraiburgo-original.png', class: 'bg-primary', height: 48, style: 'border-radius: 5px;' %>
      <% end %>
    </div>
    <div class="collapse navbar-collapse">
      <ul class="nav navbar-nav">
        <%= render 'layouts/navigation_links' %>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <%= render 'layouts/nav_links_for_auth' %>
      </ul>
      <% if !user_signed_in? && !current_page?('/login') %>
        <%= form_for("user", :url => user_session_path, :html => { :class => "navbar-form navbar-right" })  do |f| %>

          <div class="input-group input-group-sm">
            <span class="input-group-addon"><i class="fa fa-user fa-2"></i></span>
            <%= f.text_field :login, :class => 'form-control', placeholder:true %>
          </div>
          <div class="input-group input-group-sm">
            <span class="input-group-addon"><i class="fa fa-lock fa-2"></i></span>
            <%= f.password_field :password, :class => 'form-control', :placeholder => 'Senha' %>
          </div>
          <%= button_tag(type: "submit", class: "btn btn-xs btn-default", style: 'line-height: 1.7;') do %>
            <i class="fa fa-sign-in"></i>
            Entrar
          <% end %>

        <% end %>
      <% end %>
    </div>
  </div>
</nav>
