<% if user_signed_in? %>
<li class="dropdown">
  <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Cadastros <span class="caret"></span></a>
  <ul class="dropdown-menu">
    <li class="dropdown-submenu">
      <a href="#" class="dropdown-toggle" data-toggle="dropdown">Gerenciar cursos</a>
      <ul class="dropdown-menu">
        <li><%= link_to t('helpers.links.pages.course_formats'), course_formats_path if can? :read, CourseFormat %></li>
        <li><%= link_to t('helpers.links.pages.course_modalities'), course_modalities_path if can? :read, CourseModality %></li>
