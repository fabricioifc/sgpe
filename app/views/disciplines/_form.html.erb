<%= bootstrap_form_for(discipline, local:true) do |form| %>
  <!-- <= render partial: 'shared/error_messages', locals: {obj: @discipline} %> -->
  <%= error_messages_for(discipline) %>

    <%= form.text_field :title, id: :discipline_title, placeholder:true, autofocus:true %>
    <%= form.text_field :sigla, id: :discipline_sigla, placeholder:true %>
    <div class="form-group">
      <%= form.check_box :active, id: :discipline_active %>
    </div>
    <div class="form-group">
      <%= form.check_box :especial, id: :discipline_especial %>
      <span class="help-block alert alert-success well-sm">Marque esta opção caso ementa, objetivo geral e referêcias bibliográficas sejam responsabilidade do professor.</span>
    </div>

    <%= form.submit %>

<% end %>
