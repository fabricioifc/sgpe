<%- model = Discipline -%>
<div class="panel panel-default">
  <div class="panel-heading clearfix">
    <h3 class="panel-title pull-left">
      <%= link_to new_discipline_path do %>
        <i class="fa fa-plus" aria-hidden="true"></i>
        <%= t '.title', :default => model.model_name.human.pluralize %>
      <% end %>
    </h3>
  </div>
  <div class="panel-body">
    <div class="table-responsive">
      <%= content_tag :table, id: 'disciplines_datatable', class: 'table table-striped table-bordered', data: { url: disciplines_path(format: :json)} do %>
        <thead>
          <tr>
            <th><%= model.human_attribute_name(:title) %></th>
            <th><%= model.human_attribute_name(:sigla) %></th>
            <th><%= model.human_attribute_name(:active) %></th>
            <th><%= model.human_attribute_name(:especial) %></th>
            <th></th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody></tbody>
      <%end%>
    </div>
  </div>
  <div class="panel-footer clearfix">
    <div class="">
      <%= link_to new_discipline_path do %>
        <i class="fa fa-plus" aria-hidden="true"></i>
        <%= t('.new', :default => t("helpers.titles.newa", model: model.model_name.human.downcase)) %>
      <% end %>
    </div>
  </div>
</div>
