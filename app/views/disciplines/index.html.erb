<%- model = Discipline -%>
<div class="panel panel-default">
  <div class="panel-heading clearfix">
    <h3 class="panel-title pull-left">
      <%= t '.title', :default => model.model_name.human.pluralize.titleize %>
    </h3>
    <div class="pull-right">
      <%= link_to new_discipline_path do %>
        <span class="glyphicon glyphicon-plus"></span>
        <%= t('.new', :default => t("helpers.titles.new", model: model)) %>
      <% end %>
    </div>
  </div>
  <div class="panel-body">
    <div class="table-responsive">
      <%= content_tag :table, id: 'disciplines_datatable', class: 'table table-striped table-bordered', data: { url: disciplines_path(format: :json)} do %>
        <thead>
          <tr>
            <th>#</th>
            <th><%= model.human_attribute_name(:title) %></th>
            <th><%= model.human_attribute_name(:description) %></th>
            <th><%= model.human_attribute_name(:active) %></th>
            <th></th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody></tbody>
      <%end%>
    </div>
  </div>
  <div class="panel-footer clearfix">
    <div class="pull-right">
      <%= link_to new_discipline_path do %>
        <span class="glyphicon glyphicon-plus"></span>
        <%= t('.new', :default => t("helpers.titles.new", model: model.model_name.human.titleize)) %>
      <% end %>
    </div>
  </div>
</div>
