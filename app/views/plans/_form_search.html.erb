<%= form_for plans_by_course_path, method: :get, html: {class: ''} do |f| %>
  <div class="form-group col-md-3">
    <%= select_tag :course_id_tag, options_for_select(cursos_por_professor.map { |k,v| [v, k]}, params[:course_id] ),
        id: :course_id_tag, class: 'select2 input-sm', prompt:'Selecione', required:true, autofocus:true %>
  </div>
  <div class="form-group col-md-3">
    <%= select_tag :discipline_id_tag, options_for_select(disciplinas_curso_e_por_professor.map { |k,v| [v, k]}, params[:discipline_id] ),
        id: :discipline_id_tag, class: 'select2 input-sm', prompt:'Selecione' %>
  </div>
  <div class="form-group col-md-2">
    <%= text_field_tag :ano_tag, params[:ano_tag], id: :ano_tag, class: 'form-control input-sm', placeholder: 'Ano' %>
  </div>
  <%= submit_tag 'Pesquisar', class: 'btn btn-sm btn-primary' %>
<% end %>
